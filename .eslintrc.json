{
    "env": {
        "node": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:github/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "@typescript-eslint/no-explicit-any": "off",
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ]
    },
    "ignorePatterns": [
        "dist/**"
    ]
}